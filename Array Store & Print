#include<iostream>
using namespace std;
class array{
 public:
 void insert(int arr[],int n)
{
	int i;
	for(i=0;i<n;i++)
	{
		cin>>arr[i];
	}
}
void display(int arr[],int n)
{
	int i;
	for(i=0;i<n;i++)
	{
		cout<<arr[i]<<endl;
	}
}	
	
};

int main()
{
	int n;
	cout<<"Enter the size of an array:"<<endl;
	cin>>n;
	
	int arr[n];
	array a;
	cout<<"Enter the element of array"<<endl;
	a.insert(arr,n);
	cout<<"Display the element of array"<<endl;
	a.display(arr,n);
	
	return 0;
}
