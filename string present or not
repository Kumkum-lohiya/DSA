#include<iostream>
using namespace std;
int main()
{
	string str;
	cout<<"Enter the string :"<<endl;
	getline(cin,str);
	
	string str2;
	cout<<"Enter the substring to be search :"<<endl;
	getline(cin,str2);
	
	string str1;
	int j=0;
	for(int i =0;i<str.length();i++)
	{
		if(str[i] == str2[j] )
		{
//			count++;
			j++;
			str1 += str[i];
		}
	}
	if(str1 == str2)
	
	{
		cout<<"The substring is present in the string "<<endl;
	}
	else {
		cout<<"The substring is not exists in the string "<<endl;
	}
	
	return 0;
}
