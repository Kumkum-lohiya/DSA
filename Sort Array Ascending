#include<iostream>
using namespace std;
sortascending(int a[],int n)
{
	int temp;
	for(int i=0;i<n-1;i++)
	{
		for(int j=0;j<n-1-i;j++)
		{
			if(a[j] > a[j+1])
			{
				temp = a[j];
				a[j] = a[j+1];
				a[j+1] = temp;
			}
		}
	}
}
int main()
{
	int n;
    cout<<"Enter the size of array :"<<endl;
	cin>>n;
	
	int arr[n];
	cout<<"Enter the elements of array :"<<endl;
	for(int i=0;i<n;i++)
	{
	  cin>>arr[i];	
	}
	
	sortascending(arr,n);
	
	cout<<"Elements of array in sorted ascending order:"<<endl;
	for(int i=0;i<n;i++)
	{
		cout<<arr[i]<<" ";
		}	
	
    return 0;
}
