#include<iostream>
using namespace std;
int main()
{
	string str1,str2;
	int i=0,j=0;
	cout<<"Enter the first string :"<<endl;
	getline(cin,str1);
	cout<<"Enter the second string :";
	getline(cin,str2);
	
	string str;
	
	for (int i = 0; i < str1.length(); i++) {
        str.push_back(str1[i]);
    }

    // Append characters of str2
    for (int j = 0; j < str2.length(); j++) {
        str.push_back(str2[j]);
    }

    cout << "After concatenation the string is:\n" << str << endl;
    return 0;
}
